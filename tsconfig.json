{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "paths": {
      "src": ["./src"],
      "src*": ["./src*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }, // absolute paths for source files
      { "transform": "typescript-transform-paths", "afterDeclarations": true } // absolute paths for .d.ts files
    ]
  },
  "exclude": [
    "node_modules",
    "scripts /*",
    "**/*.test.ts",
    "**/testSetup.*",
    "**/*.test.*",
    "**/testUtil.*",
    "**/plopfile.js",
    "**/*.stories.*",
    "**/stories.*"
  ],
  "include": [".storybook/storybook-env.d.ts", "./src/**/*", "emotion.d.ts"]
}
